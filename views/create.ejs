<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Presets</title>
    <link href="/fonts/suprapower/stylesheet.css" rel="stylesheet" type="text/css"/>
    <link href="/fonts/programme/style.css" rel="stylesheet" type="text/css"/>
    <link href="/css/mainstyle.css" rel="stylesheet" type="text/css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card img {
            max-height: 400px;
        }
        h1, h2, h3, h4, h5, p {
            margin-top: 0px;
            margin-bottom: 20px;
            color: #c7c7c7;
        }
    </style>
</head>
<body style="background-color: #333333;">
<header>
    <nav class="navbar navbar-expand-lg bg-dark fixed-top" data-bs-theme="dark" style="z-index: 50; opacity: 0.85;">
        <div class="container-fluid">
          <a class="nav-item" href="https://matias.me/nsfw/" style="text-decoration: none; padding-right: 35px;">Museground</a>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 list-group list-group-horizontal">
              <li class="nav-item">
                <a class="nav-link" href="/login"  aria-current="page" href="#">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/profile"  aria-current="page" href="#">Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/tracks">Tracks</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/samples">Samples</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/packs">Packs</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/presets">Presets</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/plugins">Plugin</a>
              </li>
            </ul>
        </div>
      </nav>
</header>
<main class="container mt-5" data-bs-theme="dark">
<% if(type==='Sample') { %>
    <div class="row">
        <form action="/create/Sample" method="POST" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-4 ">            
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="col-md-4 ">            
                    <label for="instrument" class="form-label">Instrument</label>
                    <input type="text" class="form-control" id="instrument" name="instrument">
                </div>
                <div class="col-md-4">
                    <label for="key" class="form-label">Key</label>
                <select class="form-select" id="key" name="key">
<option value="" selected="selected">Any Key</option>
<option value="a">A</option>
<option value="am">Am</option>
<option value="as">A#</option>
<option value="asm">A#m</option>
<option value="b">B</option>
<option value="bm">Bm</option>
<option value="c">C</option>
<option value="cm">Cm</option>
<option value="cs">C#</option>
<option value="csm">C#m</option>
<option value="d">D</option>
<option value="dm">Dm</option>
<option value="ds">D#</option>
<option value="dsm">D#m</option>
<option value="e">E</option>
<option value="em">Em</option>
<option value="f">F</option>
<option value="fm">Fm</option>
<option value="fs">F#</option>
<option value="fsm">F#m</option>
<option value="g">G</option>
<option value="gm">Gm</option>
<option value="gs">G#</option>
<option value="gsm">G#m</option>
                </select>
                </div>
                <div class="col-md-4">
                    <label for="bpm" class="form-label">BPM</label>
                    <input type="number"  step="any" class="form-control" id="bpm" name="bpm">
                </div>
                <div class="col-md-4">
                    <label for="length" class="form-label">Length</label>
                    <input type="number"  step="any" class="form-control" id="length" name="length">
                </div>
                <div class="col-md-4">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>
                <div class="col-md-4">
                    <label for="file" class="form-label">Sample File</label>
                    <input type="file" id="file" name="file" accept=".mp3,.flac,.wav,.ogg">
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" value="Query" class="btn btn-primary">Add Sample</button>
            </div>
        </form>
      </div>
<%}%>
<% if(type==='Pack') { %>
    <div class="row">
        <form action="/create/Pack" method="POST"  enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-4 ">            
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="col-md-4 ">            
                    <label for="title" class="form-label">Price</label>
                    <input type="number" step="any" class="form-control" id="price" name="price">
                </div>
                <div class="col-md-4 ">            
                    <label for="title" class="form-label">Genre</label>
                    <input type="text" step="any" class="form-control" id="genre" name="genre">
                </div>
                <div class="col-md-4">
                    <label for="file" class="form-label">Image File</label>
                    <input type="file" id="file" name="file">
                </div>
                <div class="col-md-4">
                    <label for="samples" class="form-label">Samples</label>
                    <select class="form-select" id="samples" name="samples" multiple="true">
                        <% samples.forEach(sample=> { %>
                            <option value="<%= JSON.stringify(sample) %>"><%=sample.title%></option>
                        <%});%>
                    </select>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" value="Query" class="btn btn-primary">Apply Filter</button>
            </div>
        </form>
      </div>
<%}%>     
<% if(type==='Preset') { %>
    <div class="row">
        <form action="/create/Preset" method="POST"  enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-4 ">            
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="col-md-4 ">            
                    <label for="genres" class="form-label">Genre(s)</label>
                    <input type="text" class="form-control" id="genres" name="genres">
                </div>
                <div class="col-md-4 ">            
                    <label for="types" class="form-label">Type(s)</label>
                    <input type="text" class="form-control" id="types" name="types">
                </div>
                <div class="col-md-4 ">            
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="price" name="price">
                </div>
                <div class="col-md-4">
                    <label for="image" class="form-label">Image File</label>
                    <input type="file" id="image" name="image">
                </div>
                <div class="col-md-4">
                    <label for="preset" class="form-label">Preset File</label>
                    <input type="file" id="preset" name="preset">
                </div>
                <div class="col-md-4">
                    <label for="plugins" class="form-label">VST</label>
                    <select class="form-select" id="plugin" name="plugin">
                        <% plugins.forEach(plugin=> { %>
                            <option value="<%= JSON.stringify(plugin) %>"><%=plugin.title%></option>
                        <%});%>
                    </select>
                </div>               
            </div>
            <div class="mt-3">
                <button type="submit" value="Query" class="btn btn-primary">Apply Filter</button>
            </div>
        </form>
      </div>
<%}%> 
</main>
</body>
</html>