<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Packs</title>
    <link href="/fonts/suprapower/stylesheet.css" rel="stylesheet" type="text/css"/>
    <link href="/fonts/programme/style.css" rel="stylesheet" type="text/css"/>
    <link href="/css/mainstyle.css" rel="stylesheet" type="text/css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://unpkg.com/wavesurfer.js@7/dist/wavesurfer.min.js"></script>
</head>
<body style="background-color: #333333;">
<header>
    <nav class="navbar navbar-expand-lg bg-dark fixed-top" data-bs-theme="dark" style="z-index: 50; opacity: 0.85;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 list-group list-group-horizontal">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/copyrights">Copyright Tracks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/usersamples">User Samples</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/packs">Packs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/vst">VST</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/presets">Presets</a>
                </li>
            </ul>
        </div>
    </nav>
    <nav id="sidebar" class="col-md-3 col-lg-2 h-100 d-md-block sidebar">
      <div class="position-sticky">
        <ul class="nav flex-column">
          <li class="nav-item text-light">
            <h4 class="font-weight-bold"><a class="nav-link" href="/profile">Profile</a></h4>
          </li>
          <li class="nav-item text-light">
            <h4 class="font-weight-bold">Downloaded Items</h4>
            <div class="scrollable-content">
              <ul class="nav flex-column">
                <li class="nav-item text-light"><a class="nav-link" href="/profile/items/tracks">Tracks</a></li>
                <li class="nav-item text-light"><a class="nav-link" href="/profile/items/samples">Samples</a></li>
                <li class="nav-item text-light"><a class="nav-link active" href="/profile/items/packs">Packs</a></li>
                <li class="nav-item text-light"><a class="nav-link" href="/profile/items/presets">Presets</a></li>
                <li class="nav-item text-light"><a class="nav-link" href="/profile/items/plugins">Plugins</a></li>
              </ul>
            </div>
          </li>
          <li class="nav-item text-light">
            <h4 class="font-weight-bold">Created Items</h4>
            <div class="scrollable-content">
              <ul class="nav flex-column">
                <li class="nav-item text-light"><a class="nav-link" href="/profile/items/samples-created">Samples</a></li>
                <li class="nav-item text-light"><a class="nav-link" href="/profile/items/packs-created">Packs</a></li>
                <li class="nav-item text-light"><a class="nav-link" href="/profile/items/presets-created">Presets</a></li>
              </ul>
            </div>
          </li>
        </ul>
      </div>
    </nav>
</header>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-xs-5 px-lg-5 content-area" data-bs-theme="dark" style="margin-top: 50px; margin-bottom: 50px;">
        <h1 id="mydiv" data-test="<%=type%>">Downloaded <%= type %></h1>
        <% for (let i = 0; i < packs.length; i++) { %>
            <% if (i % 3 === 0) { %>
                <div class="row">
            <% } %>
            <div class="col-md-4">
                <div class="card">
                    <img src="<%=packs[i].imagepath%>" class="card-img-top" alt="Pack Image">
                    <div class="card-body">
                        <h5 class="card-title"><%= packs[i].title %></h5>
                        <p class="card-text">Rating: <span class="badge bg-warning"><%= packs[i].rating %></span></p>
                        <p class="card-text">Price: $<%= packs[i].price %></p>
                        <ul class="list-group">
                            <% packs[i].samples.forEach(sample => { %>
                                <li class="list-group-item sound">
                                    <div id="waveform<%=sample.sampleid%>" class="wave"></div>
                                    <button type="button" id="playPauseBtn<%=sample.sampleid%>" class="btn btn-outline-light">
                                        <img src="/images/play.png" alt="Play" width="20" height="20">
                                    </button>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
            <% if (i % 3 === 2 || i === packs.length - 1) { %>
                </div>
            <% } %>

        <%}%>
    </main>
    <script type="text/javascript">
        const waveformElements = document.querySelectorAll('[id^="waveform"]');
        const numberOfWaveforms = waveformElements.length;
        const wavesurfers = [];
        const sampledatajson = '<%-JSON.stringify(sampledata)%>';
        const sampledata = JSON.parse(sampledatajson);
        const playPauseBtns = document.querySelectorAll('.btn-outline-light');

        for (let i=0; i<numberOfWaveforms;i++)
        {
        const wavesurfer = WaveSurfer.create({
        container: `#waveform${sampledata.sampleids[i]}`,
        responsive: true,
        height: 60,
        waveColor: '#00F0FF',
        progressColor: '#0070FF',
    });
    wavesurfer.load(sampledata.samplepaths[i]);
    wavesurfers.push(wavesurfer);
    }

    playPauseBtns.forEach((btn, index) => {
    btn.addEventListener('click', () => {
        const img = btn.querySelector('img');
        const isPlaying = wavesurfers[index].isPlaying();

        // Seek to the start and toggle play/pause
        if (isPlaying) {
            wavesurfers[index].pause();
            img.src = '/images/play.png'; // Change to play image
            img.alt = 'Play';
        } else {
            wavesurfers[index].seekTo(0);
            wavesurfers[index].play();
            img.src = '/images/pause.png'; // Change to pause image
            img.alt = 'Pause';
        }
    });
});
    </script>
</body>
</html>